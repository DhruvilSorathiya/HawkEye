<%include file="HEADER.tmpl"/>

<h2><i class='glyphicon glyphicon-info-sign'></i> Module Information</h2>
<p class='lead'>HawkEye includes <strong>200+ intelligence gathering modules</strong> across multiple categories. Use the search boxes below to filter modules by name, category, description, or API requirement.</p>

<div class="alert alert-info">
    <strong><i class='glyphicon glyphicon-lightbulb'></i> Tip:</strong> Modules marked in <span class="text-warning"><strong>yellow</strong></span> require an API key. Modules in <span class="text-success"><strong>green</strong></span> are free to use without authentication.
</div>

<div class='table-responsive'>
    <table id='module-info-table' class='table table-bordered table-striped table-hover tablesorter'>
        <thead>
            <tr>
                <th style='width:20%'>Module Name</th>
                <th style='width:15%'>Category</th>
                <th style='width:50%'>Description</th>
                <th style='width:15%'>Requires API Key</th>
            </tr>
        </thead>
        <tbody id='module-tbody'>
            <!-- Module rows will be generated by JavaScript -->
        </tbody>
    </table>
</div>

<script type='text/javascript'>
$(document).ready(function() {
    // Module data array - all 234 modules
    var modules = ${module_data};
    
    var tbody = $('#module-tbody');
    
    // Generate table rows
    for (var i = 0; i < modules.length; i++) {
        var m = modules[i];
        var apiKeyClass = m[3] == 'Yes' ? 'text-warning' : 'text-success';
        var row = '<tr>' +
            '<td><strong>' + m[0] + '</strong></td>' +
            '<td>' + m[1] + '</td>' +
            '<td>' + m[2] + '</td>' +
            '<td class="' + apiKeyClass + '"><strong>' + m[3] + '</strong></td>' +
            '</tr>';
        tbody.append(row);
    }
    
    // Initialize tablesorter with filters
    $("#module-info-table").tablesorter({
        widgets: ["filter"],
        widgetOptions: {
            filter_searchDelay: 300,
            filter_hideFilters: false
        }
    });
});
</script>

